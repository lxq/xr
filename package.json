{
  "name": "xr",
  "version": "0.3.0",
  "description": "Ultra-simple wrapper around XMLHttpRequest.",
  "main": "xr.js",
  "scripts": {
    "update-authors": "git log --format='%aN <%aE>' | sort -u | grep -v noreply > AUTHORS",
    "prepublish": "npm run update-authors && npm run build",
    "build": "NODE_ENV=production tsc && node ./scripts/rename.js && webpack --config webpack.config.js",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/radiosilence/xr"
  },
  "keywords": [
    "request",
    "xmlhttprequest",
    "json",
    "ajax"
  ],
  "author": "James Cleveland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/radiosilence/xr/issues"
  },
  "homepage": "https://github.com/radiosilence/xr",
  "devDependencies": {
    "tslint": "^5.1.0",
    "typescript": "2.3",
    "typescript-formatter": "5.1.3",
    "webpack": "^1.12.12"
  },
  "dependencies": {
    "querystring": "^0.2.0"
  }
}
